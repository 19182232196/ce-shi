<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="userController" class="com.pojo.UserController" autowire="byName">
<!--        <property name="userService" ref="userService"/>-->
    </bean>
    <bean id="userService" class="com.pojo.UserServiceImpl" autowire="byName">
<!--        <property name="userDao" ref="userDao"/>-->
    </bean>
    <bean id="service" class="com.pojo.UserServiceImpl" autowire="byName">
    </bean>
    <bean id="userDao" class="com.pojo.UserDaoImpl">
    </bean>
    <bean id="dao" class="com.pojo.UserDaoImpl">
    </bean>
<!--    byName：将自动装配的属性的属性名(不是变量名，并且要首字母小写)，作为bean的id在IOC容器中匹配相对应的bean进行赋值-->
</beans>